# Development Environment Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection (Development)
MONGODB_URI=mongodb://localhost:27017/myrotapro_dev

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=7d

# Email Configuration (Development - Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-dev-email@gmail.com
SMTP_PASS=your-dev-app-password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# AI Solver Configuration
AI_SOLVER_TIMEOUT=30000
AI_SOLVER_MAX_ITERATIONS=1000

# Security Configuration (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
