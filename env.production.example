# Production Environment Configuration
NODE_ENV=production
PORT=5000

# MongoDB Connection (Production)
MONGODB_URI=mongodb://localhost:27017/myrotapro_prod

# JWT Configuration (Use strong secret in production)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password

# AI Solver Configuration
AI_SOLVER_TIMEOUT=30000
AI_SOLVER_MAX_ITERATIONS=1000

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

